{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "types": [],
    "paths": {
      "@root/*": ["./"],
      "@src/*": ["./src/*"],
      "@assets/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@modules/*": ["./src/app/modules/*"],
      "@interfaces/*": ["./src/app/interfaces/*"],
      "@components/*": ["./src/app/components/*"]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
